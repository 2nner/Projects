        <!--app:layout_constraintLeft_toLeftOf="@+id/tv_wishList_content"-->
        <!--android:layout_marginTop="1dp"/>-->

    <TextView
        android:id="@+id/tv_wishList_tag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#"
        android:textSize="15sp"
        android:textColor="#fe424d"
        app:layout_constraintTop_toBottomOf="@+id/tv_wishList_content"
        app:layout_constraintLeft_toLeftOf="@+id/tv_wishList_content"/>

    <TextView
        android:id="@+id/tv_wishList_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경치"
        android:textSize="15sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@+id/tv_wishList_tag1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_wishList_tag1"
        app:layout_constraintLeft_toRightOf="@+id/tv_wishList_tag1"/>

    <TextView
        android:id="@+id/tv_wishList_tag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#"
        android:textSize="15sp"
        android:textColor="#fe424d"
        app:layout_constraintTop_toBottomOf="@+id/tv_wishList_content"
        app:layout_constraintLeft_toRightOf="@+id/tv_wishList_content1"
        android:layout_marginStart="4dp"/>

    <TextView
        android:id="@+id/tv_wishList_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경치"
        android:textSize="15sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@+id/tv_wishList_tag1"
