<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:text="홈 화면입니다"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_totalSensoredValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_totalValue"
            android:gravity="center"
            android:text="~~~"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv_totalAvoidedValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_totalSensoredValue"
            android:layout_alignBottom="@+id/tv_totalSensoredValue"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@+id/tv_totalSensoredValue"
            android:text="~~~"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv_totalValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="총 감지 횟수"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_successAvoid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_totalAvoidedValue"
            android:layout_alignTop="@+id/tv_totalValue"
            android:text="회피 성공 횟수"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </RelativeLayout>
</LinearLayout>
